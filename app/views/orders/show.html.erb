<div class="card">
    <div class="card-body">
        <h5 class="card-title">Commande n°<%= @order.id %></h5>
        <p class="card-text">Commande effectuee le <%= @order.created_at %></p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="row">
                <div class="col">
                    <h5 class="card-title">Adresse de livraison</h5>
                    <p class="card-text"><%= @order.user.address %></p>
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col">
                    <h5 class="card-title">Prix total</h5>
                    <p class="card-text"><%= @order.orderitems.map{|item| item.item.price * item.quantity}.sum %>€</p>
                </div>
            </div>
        </li>
    </ul>
    <div class="card-body">
        <h5 class="card-title">Produits</h5>
        <div class="row">
            <div class="card">
                <% @order.orderitems.each do |item| %>
                    <div class="row">
                        <div class="col">
                            <img src="<%= item.item.image_url %>" alt="<%= item.item.name %>">
                        </div>
                        <div class="col">
                            <h5><%= item.item.name %></h5>
                            <p><%= item.item.description %></p>
                        </div>
                        <div class="col">
                            <p><%= item.item.price %>€ x <%= item.quantity %> = <%= item.item.price * item.quantity %>€</p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>